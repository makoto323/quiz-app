<section class="hero is-link">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        クイズ一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @quizzes.each do |quiz| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to quiz_path(quiz) do %>
                  <%= attachment_image_tag quiz, :image %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">

                </div>
                <div class="media-content">
                  <div class="title"><%=link_to quiz.user.username, user_path(quiz.user) %></div>
                  <%= quiz.title %></a>
                </div>
              </div>

              <div class="content">
                <h4>更新日時</h4>
                <time><%= quiz.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>

              <div class="content">
                <h4>いいねの数数</h4>
                <% @quizzes.each do |quiz| %>
                <a href="/quizzes/<%= quiz.id %>"><%= quiz.title %></a>
                (<%= quiz.liked_users.count %>)<br>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
